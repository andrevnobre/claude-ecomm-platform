{
  "family": "catalog-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/catalogApiTaskRole",
  "containerDefinitions": [
    {
      "name": "catalog-api",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/catalog-api:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "SERVICE_NAME",
          "value": "catalog-api"
        },
        {
          "name": "API_PREFIX",
          "value": "/api/v1"
        },
        {
          "name": "XRAY_ENABLED",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:catalog/db/host"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:catalog/db/port"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:catalog/db/name"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:catalog/db/user"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:catalog/db/password"
        },
        {
          "name": "REDIS_HOST",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:catalog/redis/host"
        },
        {
          "name": "REDIS_PORT",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:catalog/redis/port"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/catalog-api",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/api/v1/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "xray-daemon",
      "image": "public.ecr.aws/xray/aws-xray-daemon:latest",
      "portMappings": [
        {
          "containerPort": 2000,
          "protocol": "udp"
        }
      ],
      "essential": false,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/catalog-api-xray",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "xray"
        }
      }
    }
  ]
}
